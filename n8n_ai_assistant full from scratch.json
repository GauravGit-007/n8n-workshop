    {
      "parameters": {
        "jsCode": "// Extract text from either transcribed audio or direct text message\nconst items = $input.all();\nconst output = [];\n\nfor (const item of items) {\n  let userMessageText = '';\n  let chatId = '';\n  \n  if (item.json.transcription) {\n    // From audio transcription\n    userMessageText = item.json.transcription;\n    chatId = item.json.message?.chat?.id || item.json.chatId;\n  } else if (item.json.message?.text) {\n    // From direct text message\n    userMessageText = item.json.message.text;\n    chatId = item.json.message.chat.id;\n  }\n  \n  output.push({\n    json: {\n      userMessageText,\n      chatId,\n      originalMessage: item.json\n    }\n  });\n}\n\nreturn output;"
      },
