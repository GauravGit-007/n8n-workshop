        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "model",
              "value": "llama-3.1-sonar-small-128k-online"
            },
            {
              "name": "messages",
              "value": "={{ JSON.stringify([{role: 'system', content: 'You are an intent classifier. Analyze the user message and return ONLY valid JSON with this exact structure: {\"intent\": \"CALL\" or \"REMINDER\" or \"EMAIL\" or \"GENERAL_CHAT\", \"data\": {relevant extracted fields}}. For CALL extract: targetPerson, phoneNumber, purpose. For REMINDER extract: title, dateTime, description. For EMAIL extract: recipientName, recipientEmail, subject, mainPoints. Be concise.'}, {role: 'user', content: $json.userMessageText}]) }}"
            }
          ]
        },
        "options": {}
      },
      "id": "detect-intent-ai",
      "name": "Detect Intent (AI)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1340, 300]
    },
    {
      "parameters": {
        "jsCode": "// Parse AI response and extract intent\nconst items = $input.all();\nconst output = [];\n\nfor (const item of items) {\n  try {\n    const aiResponse = item.json.choices[0].message.content;\n    let parsedIntent;\n    \n    // Try to extract JSON from the response\n    const jsonMatch = aiResponse.match(/\\{[\\s\\S]*\\}/);\n    if (jsonMatch) {\n      parsedIntent = JSON.parse(jsonMatch[0]);\n    } else {\n      parsedIntent = JSON.parse(aiResponse);\n    }\n    \n    output.push({\n      json: {\n        intent: parsedIntent.intent,\n        data: parsedIntent.data || {},\n        userMessageText: item.json.userMessageText,\n        chatId: item.json.chatId,\n        originalMessage: item.json.originalMessage\n      }\n    });\n  } catch (error) {\n    // Fallback to GENERAL_CHAT if parsing fails\n    output.push({\n      json: {\n        intent: 'GENERAL_CHAT',\n        data: {},\n        userMessageText: item.json.userMessageText,\n        chatId: item.json.chatId,\n        originalMessage: item.json.originalMessage\n      }\n    });\n  }\n}\n\nreturn output;"
      },
